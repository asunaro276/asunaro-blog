---
import { COLOR } from "/constants";
import type { TagItem } from "/types";

type Props = {
  tags: TagItem[];
};

const { tags } = Astro.props;
---

<div class="shodow border bg-white rounded pb-12 p-6">
  <div class="font-bold mb-6">Tag</div>
  <div
    class="flex flex-wrap gap-x-1 gap-y-3 overflow-y-scroll"
    style={{ height: "280px" }}
  >
    {
      tags.map((tag) => {
        return (
          <div>
            <a href={`/tag/${tag._id}/1`}>
              <button
                class="mr-4 whitespace-nowrap py-1 px-2 border rounded-md align-middle text-white hover:brightness-[0.85] transition"
                style={{
                  fontSize: "14px",
                  backgroundColor: COLOR.primary,
                }}
              >
                <span
                  class="material-icons align-middle"
                  style={{ fontSize: "18px" }}
                >
                  local_offer
                </span>
                {tag.tag}
                <span>（{tag.ref?.length ?? 0}）</span>
              </button>
            </a>
          </div>
        );
      })
    }
  </div>
</div>
