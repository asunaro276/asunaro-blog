---
import { COLOR } from "/constants";
import type { YearMonthItem } from "/types";

type Props = {
  yearmonths: YearMonthItem[];
};

const { yearmonths } = Astro.props;
---

<div class="shodow border bg-white rounded pb-12 p-6">
  <div class="font-bold mb-6">Archive</div>
  <div>
    {
      yearmonths.map((yearmonth) => {
        const [year, month] = yearmonth.yearmonth.split("-");
        return (
          <div>
            <hr />
            <a href={`/yearmonth/${yearmonth.yearmonth}/1`}>
              <button class="py-4 px-2 hover:brightness-[0.4] transition" style={{ color: COLOR.text.primary }}>
                {year}/{month}
                <span
                  style={{ color: COLOR.text.base }}
                >{`(${yearmonth.ref.length})`}</span>
              </button>
            </a>
          </div>
        );
      })
    }
  </div>
</div>
