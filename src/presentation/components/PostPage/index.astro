---
import type { ArticleItem, Heading } from "/types";
import PostBody from "./PostBody";
import Header from "/presentation/components/common/Header/index.astro";
import SideBar from "/presentation/components/common/SideBar/index.astro";
import Footer from "/presentation/components/common/Footer/index.astro";
import { COLOR } from "/constants";
import type { Category } from "/domain/models/article/category/Category";
import type { Tag } from "/domain/models/article/tag/Tag";
import type { YearMonth } from "/domain/models/article/yearmonth/YearMonth";

type Props = {
  blog: ArticleItem;
  headings: Heading[];
  categories: Category[];
  tags: Tag[];
  yearmonths: YearMonth[];
};
const props = Astro.props;
---

<div style={{ backgroundColor: COLOR.bgColor }}>
  <div class="relative z-10">
    <Header categories={props.categories} />
  </div>
  <div class="flex md:p-[32px] justify-center relative z-0">
    <div class="xl:max-w-screen-xl grid grid-cols-1 lg:grid-cols-4 gap-6">
      <div class:list={["lg:col-span-3"]}>
        <PostBody client:load blog={props.blog} headings={props.headings} />
      </div>
      <div class="lg:col-span-1 mt-20 lg:mt-0">
        <SideBar
          tags={props.tags}
          yearmonths={props.yearmonths}
          headings={props.headings}
        />
      </div>
    </div>
  </div>
  <div>
    <Footer categories={props.categories} />
  </div>
</div>
